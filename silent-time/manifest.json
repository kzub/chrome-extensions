{
  "manifest_version": 2,

  "name": "Silent time",
  "description": "Time we use to work",
  "version": "1.0",
  "icons": { 
    "16": "timer-icon.png",
    "48": "timer-icon.png",
    "128": "timer-icon.png"
  },
  "background":{
    "scripts":[
      "init.js"
    ]
  },
  "browser_action": {
    "default_icon": "timer-icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs", 
    "background"
  ]
}
